# Flash Loan Arbitrage Bot - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Web3 Provider (Base Network)
WEB3_PROVIDER=https://mainnet.base.org

# =============================================================================
# API KEYS & ENDPOINTS
# =============================================================================

# Uniswap API Key (optional)
UNISWAP_API_KEY=your_uniswap_api_key_here

# Subgraph Endpoints
UNISWAP_V3_SUBGRAPH=https://api.thegraph.com/subgraphs/name/uniswap/uniswap-v3
AERODROME_SUBGRAPH=https://api.thegraph.com/subgraphs/name/aerodrome-finance/aerodrome-v2

# =============================================================================
# CONTRACT ADDRESSES (Base Network)
# =============================================================================

# SushiSwap Factory
SUSHI_FACTORY_ADDRESS=0x6B3595068778DD592e39A122f4f5a5cF09C90fE2

# =============================================================================
# WALLET CONFIGURATION
# =============================================================================

# Your wallet private key (for live trading)
PRIVATE_KEY=your_private_key_here

# =============================================================================
# EXECUTION SETTINGS
# =============================================================================

# Execution Modes
EXECUTION_MODE=False
SIMULATION_MODE=True
SAFE_MODE=True
FLASH_LOAN_ENABLED=False

# =============================================================================
# POSITION SIZING
# =============================================================================

# Position Size (USD)
POSITION_SIZE_USD=5

# Profit Thresholds (%)
MIN_PROFIT_PCT=1.0
MAX_PROFIT_PCT=20.0

# =============================================================================
# RISK MANAGEMENT
# =============================================================================

# Liquidity Requirements (USD)
MIN_LIQUIDITY_USD=100000

# Slippage Protection
MAX_SLIPPAGE=0.01

# Gas Settings (Base Network)
BASE_GAS_PRICE_GWEI=1000000
GAS_LIMIT_SWAP=300000
GAS_LIMIT_APPROVE=100000

# =============================================================================
# FEE SETTINGS
# =============================================================================

# Transaction Fees
DEFAULT_SLIPPAGE_PCT=0.01
TRANSACTION_FEE_PCT=0.003
SLIPPAGE_PCT=0.01

# MEV Protection
MEV_PROTECTION_COST_USD=1.0

# Profit Thresholds
MIN_PROFIT_THRESHOLD_USD=0.50

# =============================================================================
# FLASH LOAN SETTINGS
# =============================================================================

# Flash Loan Configuration
FLASH_LOAN_AMOUNT_USD=100000
FLASH_LOAN_FEE_PCT=0.0009
FLASH_LOAN_MIN_PROFIT_USD=50

# =============================================================================
# LOGGING
# =============================================================================

# Log Level
LOG_LEVEL=INFO

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# For development/testing only
# Set these to False for production
SAFE_MODE=True
SIMULATION_MODE=False

# =============================================================================
# NOTES
# =============================================================================

# 1. Never commit your .env file to version control
# 2. Keep your private key secure
# 3. Start with SAFE_MODE=True and SIMULATION_MODE=True
# 4. Test with small amounts before going live
# 5. Monitor gas prices on Base network 